<Window x:Class="Processor_Boost_Mode_Manager.ProcessSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Processor_Boost_Mode_Manager"
        mc:Ignorable="d"
        Title="Select Program" Height="300" Width="250"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDoubleClick="ProcessesListBox_MouseDoubleClick">
    <Grid>
        <ListBox x:Name="ProcessesListBox"
                 HorizontalAlignment="Stretch"
                 VerticalAlignment="Stretch">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Height" Value="25" />
                    <Setter Property="FontSize" Value="14" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
    </Grid>
</Window>
